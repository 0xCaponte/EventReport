<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.MapFragment" />

        <Button
            android:id="@+id/Panico"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#ff0000"
            android:text="@string/btn_panico"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ejm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.05"
            android:background="#ffffff"
            android:gravity="center_horizontal|center_vertical"
            android:paddingRight="10dip"
            android:text="Ejemplos"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/toggleEjemplos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/ejm"
            android:layout_below="@+id/ejm"
            android:layout_marginRight="14dp"
            android:onClick="onToggleClicked"
            android:text="Ejemplos"
            android:textOff="Off"
            android:textOn="On" />

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/ejm"
            android:layout_below="@+id/toggleEjemplos"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:text="Limpiar"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btnLimpiar"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:text="Actualizar"
            android:textSize="20sp" />

    </RelativeLayout>

</TableLayout>